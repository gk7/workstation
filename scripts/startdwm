#!/bin/bash
# Start some nice programs for DWM
#
sh .fehbg					## Sets wallpaper
start-pulseaudio-x11 &				## Start Pulseaudio Sound Server
xset r rate 350 50 				## Key repeat rate
numlockx on &					## Acrivates numlock
dunst -config $HOME/.dunstrc &			## Notification Daemon
$HOME/.scripts/batnot				## Battery Notification
setxkbmap -option caps:escape			## Map caps lock to escape
xmodmap -e "keycode 135 = Super_L"		## Map Menu key to mod4
while true; do
/home/garry/.scripts/dwmstatus
sleep 0.5
done &
dwm
